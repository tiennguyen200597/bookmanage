<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tien.demo.bookmanage">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.FullscreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activity.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:label="@string/title_activity_user"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />

        </activity>
        <activity
            android:name=".activity.BookCategoryActivity"
            android:label="@string/title_activity_book_category"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />
        </activity>
        <activity
            android:name=".activity.BookActivity"
            android:label="@string/title_activity_book"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />
        </activity>
        <activity
            android:name=".activity.InvoiceActivity"
            android:label="@string/title_activity_invoice"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />
        </activity>
        <activity
            android:name=".activity.StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />
        </activity>
        <activity
            android:name=".activity.TopPopularActivity"
            android:label="@string/title_activity_top_popular"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tien.demo.bookmanage.activity.MenuActivity" />
        </activity>
    </application>

</manifest>